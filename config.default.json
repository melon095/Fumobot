{
    "Serilog": {
        "Using": [
            "Serilog",
            "Serilog.Expressions",
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning",
                "Quartz": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "formatter": {
                        "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
                        "template": "[{@t:HH:mm:ss} {@l,-11}] {Coalesce(SourceContext, '<none>')} {@m}\n{@x}",
                        "theme": "Serilog.Templates.Themes.TemplateTheme::Code, Serilog.Expressions"
                    }
                }
            },
            {
                "Name": "File",
                "Args": {
                    "formatter": {
                        "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
                        "template": "[{@t:HH:mm:ss} {@l,-11}] {Coalesce(SourceContext, '<none>')} {@m}\n{@x}",
                        "theme": "Serilog.Templates.Themes.TemplateTheme::Code, Serilog.Expressions"
                    },
                    "path": "/var/log/fumobot/fumobot.log",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7
                }
            }
        ]
    },
    "Connections": {
        "Postgres": "Host=my_host;Database=my_database;Username=my_user;Password=my_pw;Port=my_port;",
        "Redis": "localhost,name=fumo_bot,user=foo,password=bar"
    },
    "Twitch": {
        "Username": "",
        "UserID": "",
        "Token": "",
        "ThreeLetterAPI": "",
        "ClientID": "",
        "ClientSecret": "",
        "Verified": false
    },
    "SevenTV": {
        "Bearer": ""
    },
    "Metrics": {
        "Port": 42069,
        "Enabled": false
    },
    "Website": {
        "PublicURL": "https://yeah.com",
        "DataProtection": {
            "RedisKey": "DataProtection-Keys",
            "CertificateFile": "certificate.pfx",
            "CertificatePass": ""
        }
    },
    "GlobalPrefix": "buh",
    "DebugTMI": false,
    "Curl": {
        "TwitchCookies": "auth-token:...;persistent=..."
    },
    "MessageSendingMethod": "Helix|Console"
}